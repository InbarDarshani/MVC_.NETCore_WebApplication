@model IEnumerable<TweetSharp.TwitterStatus>
@{
    ViewData["Title"] = "Restaurants Tweets";
}

<div class="container">
    <h1>Restaurants Tweets</h1>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Creator
                </th>
                <th>
                    Tweet
                </th>
                <th>
                    Date Created
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Author.ScreenName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Text)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedDate)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>